module Enumerable

  def my_each
    i = 0
    while i < self.length
      yield(self[i])
      i+=1
    end
    return self
  end

  def my_each_with_index
    i = 0
    while i < self.length
      yield(self[i], self.index(self[i]))
      i+=1
    end
    return self
  end

  def my_select
    i = 0
    new_array = []
    while i < self.length
      if yield(self[i])
        new_array.push(self[i])
      end
      i+=1
    end
    return new_array
  end

  def my_all?
    i = 0
    truth = []
    while i < self.length
      if yield(self[i])
        truth.push(self[i])
      end
      i+=1
    end
    if truth == self
      return true
    else
      return false
    end
  end

  def my_any?
    i = 0
    while i < self.length
      if yield(self[i])
        return true
      end
      i+=1
    end
  end

  def my_none?
    i = 0
    false_array = []
    while i < self.length
      if yield(self[i])
      else
        false_array.push(self[i])
      end
      i+=1
    end
    if self.length == false_array.length
      return true
    else
      return false
    end
  end

  def my_count(*obj)
    i = 0
    answer_array = []
    while i < self.length
      if block_given?
        if yield(self[i])
          answer_array.push(self[i])
        end
      elsif obj.empty? == false
          answer_array.push(self[i]) if obj.include?(self[i])
      else
        answer_array.push(self[i])
      end
      i+=1
    end
    return answer_array.length
  end

end