module Enumerable

  def my_each
    i = 0
    while i < self.length
      yield(self[i])
      i+=1
    end
    return self
  end

  def my_each_with_index
    i = 0
    while i < self.length
      yield(self[i], self.index(self[i]))
      i+=1
    end
    return self
  end

  def my_select
    i = 0
    new_array = []
    while i < self.length
      if yield(self[i])
        new_array.push(self[i])
      end
      i+=1
    end
    return new_array
  end

  def my_all?
    i = 0
    truth = []
    while i < self.length
      if yield(self[i])
        truth.push(self[i])
      end
      i+=1
    end
    if truth == self
      return true
    else
      return false
    end
  end

  def my_any?
    i = 0
    while i < self.length
      if yield(self[i])
        return true
      end
      i+=1
    end
  end

end